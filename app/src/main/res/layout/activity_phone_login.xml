<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/loginSignup1Background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="56dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login Dengan Nomor Handphone" />

        <TextView
            android:textSize="18sp"
            android:padding="10dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Memudahkan mu melakukan registrasi tanpa menggunakan alamat e-mail" />

        <TextView
            android:text="Tulis Nomor Handphone diawali dengan +62"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/phone_number_input"
            style="@style/LoginSignUp25Input"
            android:hint="Phone Number"
            android:inputType="phone" />
        <EditText
            android:id="@+id/verification_code_input"
            style="@style/LoginSignUp25Input"
            android:hint="Tulis Kode Verifikasi"
            android:inputType="phone"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/send_ver_code_button"
            style="@style/ButtonOrange"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="18dp"
            android:text="Kirim Kode Verifikasi"
            android:textAllCaps="false"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/verify_button"
            style="@style/ButtonOrange"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="18dp"
            android:text="Verifikasi Sekarang"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:visibility="invisible"/>

    </LinearLayout>

</ScrollView>


