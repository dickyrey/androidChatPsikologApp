<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FindFriendsActivity">

    <include
        android:id="@+id/find_firends_toolbar"
        layout="@layout/app_bar_layout" />

    <LinearLayout
        android:layout_below="@id/find_firends_toolbar"
        android:id="@+id/linear_search"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/search_psikolog"
            android:layout_below="@+id/find_firends_toolbar"
            android:hint="Cari Psikolog...."
            android:layout_width="300dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/search_btn"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_search_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/find_friends_recycler_list"
        android:layout_below="@+id/linear_search"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>